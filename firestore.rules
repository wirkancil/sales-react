rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to cars and settings (Landing Page)
    match /cars/{car} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (Admin) can write
    }
    
    match /settings/{setting} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (Admin) can write
    }
    
    // Allow authenticated users (including anonymous) to create appointments
    match /appointments/{appointment} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null; // Admin can read/manage
    }

    // Default deny for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
